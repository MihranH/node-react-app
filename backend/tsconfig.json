{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./dist",
      "skipLibCheck": true,
      "strictPropertyInitialization": false, // to not write constructor
      "resolveJsonModule": true,
    },
    "include": ["/**/*.ts"],
    "exclude": ["node_modules"],
}
  